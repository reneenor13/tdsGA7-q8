import matplotlib.pyplot as plt

# Quarterly data
quarters = ["Q1", "Q2", "Q3", "Q4"]
retention = [71.68, 72.07, 69.67, 71.91]
industry_target = 85

# Plot
plt.figure(figsize=(8,5))
plt.plot(quarters, retention, marker='o', label='Customer Retention (%)')
plt.axhline(y=industry_target, color='r', linestyle='--', label='Industry Benchmark (85%)')
plt.title('Quarterly Customer Retention - 2024')
plt.xlabel('Quarter')
plt.ylabel('Retention Rate (%)')
plt.ylim(60, 90)
plt.grid(True)
plt.legend()
plt.tight_layout()

# Save image
plt.savefig('retention_trend.png')
plt.show()
